<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.MetroSub"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="16"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:name="com.MetroSub.MainApp"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:debuggable="true">
        <activity android:name=".activity.SplashScreenActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.PlanTripActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                />
        <activity android:name=".activity.TripByLocationActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                />
        <activity android:name=".activity.TripBySubwayLinesActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                />
    </application>
</manifest>
