<?xml version="1.0" encoding="utf-8"?>

<!-- Checkboxes for selecting which lines to view on the map -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_lines_screen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">

    <ScrollView
            android:id="@+id/view_line_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:paddingBottom="@dimen/option_bar_button_container_height">
        <FrameLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">
            <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:alpha=".7"/>

            <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/large_padding"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:gravity="center">
                    <CheckBox
                            android:id="@+id/checkbox_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/subway_line_red"
                            android:textSize="25sp"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/subway_line_red"
                            android:textSize="25sp"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_red"
                            android:paddingLeft="40dp"/>
                </TableRow>
                <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/large_padding"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:gravity="center">
                    <CheckBox
                            android:id="@+id/checkbox_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_green"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_green"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_green"
                            android:paddingLeft="40dp"/>
                </TableRow>
                <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/large_padding"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:gravity="center">
                    <CheckBox
                            android:id="@+id/checkbox_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_purple"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_S"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_grey"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_L"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_light_grey"
                            android:paddingLeft="40dp"/>
                </TableRow>
                <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/large_padding"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:gravity="center">
                    <CheckBox
                            android:id="@+id/checkbox_A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_blue"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_C"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_blue"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_E"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_blue"
                            android:paddingLeft="40dp"/>
                </TableRow>
                <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/large_padding"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:gravity="center">
                    <CheckBox
                            android:id="@+id/checkbox_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_orange"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_D"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_orange"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_orange"
                            android:paddingLeft="40dp"/>
                </TableRow>
                <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/large_padding"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:gravity="center">
                    <CheckBox
                            android:id="@+id/checkbox_M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_orange"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_J"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="J"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_brown"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <!--CheckBox
                            android:id="@+id/checkbox_Z"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Z"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_brown"
                            android:paddingLeft="40dp"/-->
                </TableRow>
                <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/large_padding"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:gravity="center">
                    <CheckBox
                            android:id="@+id/checkbox_N"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_yellow"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_Q"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_yellow"
                            android:paddingLeft="40dp"
                            android:paddingRight="25dp"/>
                    <CheckBox
                            android:id="@+id/checkbox_R"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R"
                            android:textSize="25sp"
                            android:textColor="@color/subway_line_yellow"
                            android:paddingLeft="40dp"/>
                </TableRow>
            </TableLayout>
        </FrameLayout>
    </ScrollView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/option_bar_button_container_height"
            android:layout_alignParentBottom="true">
        <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:alpha=".7"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/option_bar_button_container_height"
                android:gravity="center"
                android:layout_alignParentBottom="true">
            <Button
                    android:id="@+id/display_button_view_lines_screen"
                    style="@style/rectangle_button_style"
                    android:text="@string/display"
                    />
            <Button
                    android:id="@+id/cancel_button_view_lines_screen"
                    style="@style/rectangle_button_style"
                    android:text="@string/cancel"
                    />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>