<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
        <Button
                android:id="@+id/plan_trip_location_button"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:text="@string/plan_trip_location"
                android:gravity="center"
                android:background="@drawable/custom_button"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginBottom="50dp"
                />

        <Button
                android:id="@+id/plan_trip_subway_lines_button"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:text="@string/plan_trip_subway_lines"
                android:gravity="center"
                android:layout_toEndOf="@id/plan_trip_location_button"
                android:background="@drawable/custom_button"
                android:textSize="15dp"
                android:textColor="@color/white"
                />
    </LinearLayout>
</RelativeLayout>