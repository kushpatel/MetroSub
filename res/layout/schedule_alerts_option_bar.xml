<?xml version="1.0" encoding="utf-8"?>

<!-- option bar showing schedule alerts and start over buttons overlaid on map fragment -->
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/schedule_alerts_option_bar"
        android:layout_height="@dimen/option_bar_button_container_height"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
    <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:alpha=".7"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        <Button
                android:id="@+id/schedule_alerts_button"
                android:text="@string/schedule_alerts"
                style="@style/rectangle_button_style"
                />

        <Button
                android:id="@+id/start_over_button"
                android:text="@string/start_over"
                style="@style/rectangle_button_style"
                />

    </LinearLayout>
</FrameLayout>